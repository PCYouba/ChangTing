@{
    ViewBag.Title = "首页";
}

@section SectionCss
{
    <link rel="stylesheet" type="text/css" href="~/Content/UI/css/home.css" />
}
<!--banner图片轮播-->

@using (Html.BeginForm("Login", "UI", FormMethod.Post))
{
    <div id="banner-main">
        <div id="banner">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="3" class="active"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item">
                        <img src="~/Content/UI/img/banner-1.jpg" data-holder-rendered="true">
                    </div>
                    <div class="item">
                        <img src="~/Content/UI/img/banner-4.jpg" data-holder-rendered="true">
                    </div>
                    <div class="item">
                        <img src="~/Content/UI/img/banner-5.jpg" data-holder-rendered="true">
                    </div>
                    <div class="item active">
                        <img src="~/Content/UI/img/banner-4.jpg" data-holder-rendered="true">
                    </div>
                </div>
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>
    <!--内容部分-->

    <div class="content-main">
        <div id="content">
            <div class="zuo">
                <ul class="zuo-list">
                    <li><span class="glyphicon glyphicon-record tu" aria-hidden="true"></span></li>
                    <li><a href="">热门推荐</a></li>
                    <li><a href="FenYe?id=2019" id="2019">华语</a></li>
                    <li><a href="FenYe?id=2020" id="2020">粤语</a></li>
                    <li><a href="FenYe?id=1016" id="1016">欧美</a></li>
                    <li><a href="FenYe?id=1017" id="1017">日语</a></li>
                    <li><a href="FenYe?id=2021" id="2021">韩语</a></li>
                    <li><a href="FenYe">更多>></a></li>
                </ul>
                <hr class="hr1" />
                <div>
                    @*热门歌曲排行榜*@
                    <ul class="list-img">
                        @{
                            foreach (ChangTing.UI.Viewmodels.UIInfo item in @ViewBag.Recommend)
                            {
                                <li>
                                    <img src="@item.Image" alt="图片" class="content-img" />
                                    <span class="content-span1">歌曲名称：@item.RealName </span>
                                    <span class="content-span2">
                                        <a onClick='ply(this)' data-title="播放" _href="@item.Path" href="javascript:void(0)" title="播放">点击试听</a>
                                    </span>
                                </li>
                            }

                        }

                    </ul>
                </div>

                <ul class="list-img1">
                    <li><span class="glyphicon glyphicon-record tu" aria-hidden="true"></span></li>
                    <li><a href="">新碟上架</a></li>
                    <li><a href="">更多>></a></li>
                </ul>
                <hr class="hr2" />

                <ul class="list-img img2">

                    @{
                        foreach (ChangTing.UI.Viewmodels.NewestInfo item in @ViewBag.Newest)
                        {
                            <li>
                                <a href="/Index/SingerIsAlbum?albumid=@item.AlbumId">
                                    <img src="@item.Image" alt="图片" class="content-img" />
                                </a>
                                    <span class="content-span1">专辑名：@item.AlbumName </span>
                                    <span class="content-span2">歌手名: @item.SingerName </span>
                                

                            </li>
                        }

                    }
                </ul>
            </div>
            <div class="you">
                <div class="you-top">
                    @{
                        if (@ViewBag.User == null)
                        {
                            <img src="" alt="用户头像" class="you-top-img" href="~/UI/Login" />
                            <span class="nicheng">
                                <a href="~/UI/Login" style="font-size:14px">用户未登录，点击登陆</a>
                                <a href="#" class="xiaoxi">消息<span class="glyphicon glyphicon-envelope xin" aria-hidden="true"></span></a>
                                <a href="#" class="tuichu">退出</a>
                            </span>

                        }
                        else
                        {
                            foreach (ChangTing.Users.Models.UsersInfo item in @ViewBag.User)
                            {

                                <img src="@item.HeadPortrait" alt="用户头像" class="you-top-img" />
                                <span class="nicheng">
                                    <a href="~/UI/PersonalSetting">  @item.NickName </a>
                                    <a href="#" class="xiaoxi">消息<span class="glyphicon glyphicon-envelope xin" aria-hidden="true"></span></a>
                                    <a href="#" class="tuichu">退出</a>
                                </span>
                            }
                        }
                        <ul class="geshou">
                            <li><a href="~/UI/PersonalSetting">个人中心</a></li>
                            <li><a href="~/UI/Collection">我的收藏</a></li>
                        </ul>

                    }


                </div>
                <hr class="you-xian" />
                <ul class="you-foot">
                    <li><a href="#">入驻歌手</a></li>
                    <li><a href="#">查看全部>></a></li>
                </ul>
                @*最新入住歌手*@
                <ul class="you-img">
                    @{
                        foreach (ChangTing.Singer.Models.SingerInfo item in @ViewBag.NewestSinger)
                        {
                            <li>
                                <img src="@item.HeadPortrait" alt="歌手图片" />
                                <span style="font-weight:bold">@item.Name</span>
                            </li>
                        }
                    }
                </ul>
            </div>

        </div>
    </div>

    <div>
        <audio id="bfq" src="" _volume="0.8"></audio>
        @Html.Partial("_music", "Shared")
    </div>
    @section SectionJs
    {
        <script>
            function ply(main) {
                $('#bfq').attr('src', "/Content/_music/mp3/" + $(main).attr('_href'));
                play();
            }
        </script>
        <script src="~/Content/_music/js/_music.js" type="text/javascript" charset="utf-8"></script>
    }
                        }