@model ChangTing.Admin.Models.AdminInfo
@{
    ViewBag.Title = "管理员登录";
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />    <!--网站运营商路由被攻破乱七八糟的广告 不百分百的防止  不做任何代理 不让任何广告内置-->
    <meta name="renderer" content="webkit">
    <!--为多内核浏览器默认使用  急速内核-->
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/Content/Hui/lib/html5.js"></script>
    <script type="text/javascript" src="~/Content/Hui/lib/respond.min.js"></script>
    <script type="text/javascript" src="~/Content/Hui/lib/PIE_IE678.js"></script>
    <![endif]-->
    <link href="~/Content/Hui/static/h-ui/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Hui/static/h-ui.admin/css/H-ui.login.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Hui/static/h-ui.admin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Hui/lib/Hui-iconfont/1.0.7/iconfont.css" rel="stylesheet" type="text/css" />
    <!--[if IE 6]>
    <script type="text/javascript" src="http://lib.h-ui.net/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    <style type="text/css">
        #loginform label {
            margin-left: -30px;
        }

        #loginform input[type=text], #loginform input[type=password] {
            width: 288px;
        }

        .Admin-LableTS {
            font-size: 16px;
            color: red;
            margin-left: 5px;
        }

        .col-xs-8 {
            width: 76.888888888888888%;
        }
    </style>

    <title>后台登录</title>
</head>
<body>
    <input type="hidden" id="TenantId" name="TenantId" value="" />
    <div class="header"></div>
    <div class="loginWraper">
        <div id="loginform" class="loginBox">
            <form class="form form-horizontal" action="/Admin/Login" method="post">
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60d;</i></label>
                    <div class="formControls col-xs-8">
                        @Html.TextBoxFor(Model => Model.LoginName, htmlAttributes: new { id = "loginname", name = "loginname", type = "text", placeholder = "账户", @class = "input-text size-L" })
                        <span class="Admin-LableTS">@Html.ValidationMessageFor(Model => Model.LoginName)</span>
                    </div>
                </div>
                <div class="row cl">
                    <label class="form-label col-xs-3"><i class="Hui-iconfont">&#xe60e;</i></label>
                    <div class="formControls col-xs-8">
                        @Html.TextBoxFor(Model => Model.Password, htmlAttributes: new { id = "password", name = "password", type = "password", placeholder = "密码", @class = "input-text size-L" })
                        <span class="Admin-LableTS">@Html.ValidationMessageFor(Model => Model.Password)</span>
                    </div>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <input class = "input-text size-L" id="IMGTXT" name="IMGTXT" type="text" placeholder="验证码" onblur="if(this.value==''){this.value='验证码:'}" onclick="if(this.value=='验证码:'){this.value='';}" value="验证码:" style="width:120px;margin-left:-30px">
                        <img src="/Admin/YanZhengMa" id="IMG" name="IMG" width="120" height="36" style="cursor:pointer;" title="点击换一张" onclick="CodeImg('IMG')"> <a onclick="CodeImg('IMG')">看不清，换一张</a>
                    </div>
                </div>
                <div class="row cl">
                    <span class="Admin-LableTS" style="margin-left:188px">@ViewBag.Miss</span>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <input name="" type="submit" class="btn btn-success radius size-L" value="&nbsp;登&nbsp;&nbsp;&nbsp;&nbsp;录&nbsp;">
                        <input name="" type="reset" class="btn btn-default radius size-L" value="&nbsp;取&nbsp;&nbsp;&nbsp;&nbsp;消&nbsp;" style="margin-left:20px">
                    </div>
                </div>
            </form>
        </div>

        <div style="position:fixed;bottom:8px;width:100%;text-align:center;font-size:18px">
            <div style="position:relative;display:block;top:0;left:0;"></div> 技术小组: <a href="#" target="_blank" title="奈薇建站网">·佛祖</a>
        </div>

        @*<div id="end">
                公司：青岛港湾职业技术学院信息工程系|地址：河北省承德市双滦区双塔山中心大街408|邮政编号：067101
                <span id="endo">@@版权所有权</span>
            </div>*@
    </div>
    <script type="text/javascript" src="~/Content/Hui/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/Hui/static/h-ui/js/H-ui.js"></script>
    <script type="text/javascript">
        function CodeImg(ImgObj) {
           var img = new Date();
           var ImG = document.getElementById(ImgObj);
           ImG.src = "/Admin/YanZhengMa?" + img.getMilliseconds();
        }
    </script>
</body>
</html>